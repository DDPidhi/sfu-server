# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SFU_WEBSOCKET_URL=ws://localhost:8080/sfu
STUN_SERVER_URL=stun:stun.l.google.com:19302
RUST_LOG=info

# Recording Configuration
RECORDING_ENABLED=true
RECORDING_OUTPUT_DIR=./recordings

# IPFS Configuration
IPFS_ENABLED=true
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080/ipfs
IPFS_UPLOAD_TIMEOUT_SECS=300

# Asset Hub EVM Configuration (Moonbase Alpha)
# Moonbase Alpha is Moonbeam's TestNet (Chain ID: 1287)
# Set ASSET_HUB_ENABLED=true to enable blockchain integration
ASSET_HUB_ENABLED=true
# HTTP RPC URL for Moonbase Alpha
ASSET_HUB_RPC_URL=https://rpc.api.moonbase.moonbeam.network
# Private key for the signer account (hex with 0x prefix, required if enabled)
ASSET_HUB_PRIVATE_KEY=
# Deployed proctoring contract address (required if enabled)
ASSET_HUB_CONTRACT_ADDRESS=
# Transaction submission timeout in seconds
ASSET_HUB_SUBMISSION_TIMEOUT_SECS=120
# Number of retries for failed transactions
ASSET_HUB_RETRY_COUNT=5
# Gas limit for EVM transactions
ASSET_HUB_GAS_LIMIT=3000000

# Note: When using Docker, the following are automatically overridden:
#   - SERVER_HOST=0.0.0.0
#   - RECORDING_OUTPUT_DIR=/app/recordings
#   - IPFS_API_URL=http://ipfs:5001
#   - IPFS_GATEWAY_URL=http://ipfs:8080/ipfs
